#!/bin/bash

alias vbc="vim ~/.bashrc"
alias vrc="vim ~/.vim/vimrc"
alias vba="vim ~/.bash_aliases"
alias vbp="vim ~/.profile"

alias c="clear"
alias cdp='cd "$PROJECT"'
alias cdw='cd "$WORKSPACE"'
alias project="source project"

alias sbash="source ~/.profile"

alias g="git status"

alias f="find . -name"

# used frequently right after Ctrl-z
alias k1="kill % 1"

alias ls='ls -hN --color=auto --group-directories-first'
alias ll='ls -alF --color=auto -hN --color=auto --group-directories-first'
alias la='ls -A --color=auto -hN --color=auto --group-directories-first'
alias l='ls -CF --color=auto -hN --color=auto --group-directories-first'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
